<!DOCTYPE html>
<html>
<%- include('header') %>
<body>
<h1 class="text-center"><%= title %></h1>
<div class="jumbotron">
	<form action="/state" method="post">
	<div class="form-group">
	<label for="field1"></label>
	<input class="form-control" id="field1" type="text" name="state" value="" placeholder="State" required>
	</div>
	<div class="form-group">
	<label for="field2"></label>
	<input class="form-control" id="field2" type="text" name="district" value="" placeholder="District" required>
	</div>
	<div class="form-group">
	<label for="field3"></label>
	<input class="form-control" id="field3" type="text" name="taluka" value="" placeholder="Taluka" required>
	</div>
	<input type="submit" value="Submit" name="submit">
	</form>
<hr>
<div  class="table">
	<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">State</th>
      <th scope="col">District</th>
      <th scope="col">Taluka</th>
    </tr>
  </thead>
  <tbody>
<% for(var i=0; i < states.length; i++) { %>
   <tr>
   	<td><%= i+1 %></td>
     <td><%= states[i].state %></td>
     <td><%= states[i].district %></td>
     <td><%= states[i].taluka %></td>
   </tr>
<% } %>
  </tbody>
</table>
</div>
<h4 class="text-center"><a href="/main"> Go to Customer List</a></h4>
</div>
</body>
</html>
